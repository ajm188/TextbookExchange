- @conversation.each do |message|
  - if message.sender == current_user
    .sent
      %div{:style => "border-bottom: 1px solid #e0e0dc;"}
  - else
    .received{:style => "color:white;"}
      %div{:style => "border-bottom: 1px solid #2a333c; color:white;"}
  = message.sender.email
  %div{:style => "float:right;text-align:right;"}
    = message.created_at.localtime.strftime('%b %e, %l:%M %p')
  %br/
  = message.text
.clearfix
%hr{:style => "border-top:1px solid gray;"}/
